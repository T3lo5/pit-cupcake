# ==============================================================================
# Variáveis de Ambiente - Cupcakes API
# ==============================================================================
# Copie este arquivo para .env e configure as variáveis conforme necessário

# ==============================================================================
# Configurações da Aplicação
# ==============================================================================
NODE_ENV=production
PORT=3000
API_VERSION=v1

# ==============================================================================
# Configurações do Banco de Dados
# ==============================================================================
# Para desenvolvimento local com Docker
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cupcakes_db?schema=public"

# Para produção (substitua pelos valores reais)
# DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# ==============================================================================
# Configurações de Autenticação
# ==============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS=12

# ==============================================================================
# Configurações de CORS
# ==============================================================================
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# ==============================================================================
# Configurações de Rate Limiting
# ==============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# Configurações de Upload
# ==============================================================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# ==============================================================================
# Configurações de Email (opcional)
# ==============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM="Cupcakes API <noreply@cupcakes.com>"

# ==============================================================================
# Configurações de Cache Redis (opcional)
# ==============================================================================
REDIS_URL="redis://localhost:6379"
CACHE_TTL=3600

# ==============================================================================
# Configurações de Monitoramento
# ==============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==============================================================================
# Configurações de Log
# ==============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log

# ==============================================================================
# Configurações de Desenvolvimento
# ==============================================================================
ENABLE_SWAGGER=true
ENABLE_CORS_DEV=true
ENABLE_REQUEST_LOGGING=true

# ==============================================================================
# Configurações de Produção
# ==============================================================================
TRUST_PROXY=true
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ==============================================================================
# Configurações de Backup
# ==============================================================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# ==============================================================================
# Configurações de Notificações
# ==============================================================================
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# NOTIFICATION_ENABLED=false